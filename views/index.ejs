<header class="main header">
    <h1 class="page-header">Welcome to a simple Project Manager</h1>
    <h3 >By Jack Zhang</h3>
</header>
<div>
<% if(items.length > 0){ %> 
    <h3 class="page-header">Top three ToDos</h3>
    <% items.forEach(item =>{ %>
        <label><%= item.name %></label>
        <%- include('./partials/tillDue_item.ejs',{item:item}) %> 
        <div class="btn-row">
            <a class="btn btn-primary" href="/items/<%= item.id %>">Details</a>
        </div>
    <% }) %>
<% }else{ %> 
    No Upcoming ToDos
<% } %> 
</div> 